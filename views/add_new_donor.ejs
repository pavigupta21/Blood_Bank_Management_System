<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Donor Page</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="w-full h-screen flex justify-center items-center bg-zinc-800 text-white">
        <a href="/home" class="absolute top-4 left-4 text-blue-500 hover:text-blue-700 font-semibold">back to home</a>
        <div class="bg-zinc-900 p-8 rounded-lg shadow-lg w-96">
            <h3 class="text-xl font-semibold text-center mb-4">Fill Donor Details</h3>
            <form action="/addnewdonor" method="post" onsubmit="return validateForm()">
                <div class="mb-3">
                    <label class="block mb-1 text-sm">Donor Name</label>
                    <input type="text" class="w-full p-2 rounded bg-zinc-700 border border-zinc-600 focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Enter donor's full name" name="name">
                </div>
                <div class="mb-3">
                    <label class="block mb-1 text-sm">Age</label>
                    <input type="number" id="ageInput" class="w-full p-2 rounded bg-zinc-700 border border-zinc-600 focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Enter donor's age" name="age">
                </div>
                <div class="mb-3">
                    <label class="block mb-1 text-sm">Gender</label>
                    <input type="text" class="w-full p-2 rounded bg-zinc-700 border border-zinc-600 focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Enter 'M'/'F'/'other'" name="gender">
                </div>
                <div class="mb-3">
                    <label class="block mb-1 text-sm">Contact</label>
                    <input type="number" class="w-full p-2 rounded bg-zinc-700 border border-zinc-600 focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Enter donor's contact number" name="contact">
                </div>
                <div class="mb-3">
                    <label class="block mb-1 text-sm">Address</label>
                    <input type="text" class="w-full p-2 rounded bg-zinc-700 border border-zinc-600 focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Enter donor's address" name="address">
                </div>
                <div class="mb-3">
                    <label class="block mb-1 text-sm">Blood Group</label>
                    <input type="text" id="bloodGroupInput" class="w-full p-2 rounded bg-zinc-700 border border-zinc-600 focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Eg: AB+" name="blood_group">
                </div>
                <div class="mb-6">
                    <label class="block mb-1 text-sm">Units Donated</label>
                    <input type="number" class="w-full p-2 rounded bg-zinc-700 border border-zinc-600 focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Eg: 100" name="units_donated">
                </div>
                <button class="w-full bg-blue-600 hover:bg-blue-700 text-white py-2 rounded">Add Donor</button>
            </form>
        </div>
    </div>

    <script>
        function validateForm() {
            const validBloodGroups = ["A+", "A-", "B+", "B-", "AB+", "AB-", "O+", "O-"];
            const bloodGroup = document.getElementById('bloodGroupInput').value.trim().toUpperCase();
            const age = parseInt(document.getElementById('ageInput').value);

            if (isNaN(age) || age < 18) {
                alert("Invalid age. Donor must be at least 18 years old.");
                return false;
            }

            if (!validBloodGroups.includes(bloodGroup)) {
                alert("Invalid blood group. Please enter one of the following: A+, A-, B+, B-, AB+, AB-, O+, O-");
                return false;
            }

            return true;
        }
    </script>
</body>
</html>
