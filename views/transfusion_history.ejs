<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Transfusion History</title>
    <link rel="stylesheet" href="/css/output.css">
</head>
<body class="bg-zinc-900 text-white min-h-screen p-8">
    <a href="/readpatients" class="text-blue-400 hover:text-blue-600 mb-6 inline-block">‚Üê Back to All Patients</a>
    <h1 class="text-3xl font-bold mb-6">Transfusion History for <%= patient.name %></h1>

   
    <div class="bg-zinc-800 rounded-lg shadow p-6 mb-10 overflow-x-auto">
        <table class="w-full text-left">
            <thead>
                <tr class="text-sm uppercase bg-zinc-700">
                    <th class="py-3 px-4">Units Transfused</th>
                    <th class="py-3 px-4">Date of Transfusion</th>
                </tr>
            </thead>
            <tbody>
                <% patientLogs.forEach(log => { %>
                    <tr class="border-t border-zinc-700 hover:bg-zinc-700">
                        <td class="py-2 px-4"><%= log.units_transfused %></td>
                        <td class="py-2 px-4"><%= log.date_of_transfusion.toLocaleDateString('en-CA') %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

   
    <h2 class="text-xl font-semibold mb-4">Add New Transfusion Entry</h2>
    <% if (errorMessage) { %>
        <div class="bg-red-500 text-white px-4 py-2 mb-4 rounded">
            <%= errorMessage %>
        </div>
        <% } %>
    <form action="/addtransfusion/<%= patient.patient_id %>" method="POST" class="space-y-4 bg-zinc-800 p-6 rounded-lg w-full max-w-md">
        <div>
            <label for="units" class="block mb-1">Units Transfused</label>
            <input type="number" name="units" id="units" required class="w-full px-3 py-2 rounded bg-zinc-700 text-white">
        </div>
        <div>
            <label for="date" class="block mb-1">Date of Transfusion</label>
            <input type="date" name="date" id="date" required class="w-full px-3 py-2 rounded bg-zinc-700 text-white">
        </div>
        <button type="submit" class="bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded text-white">Add Transfusion</button>
    </form>
</body>
</html>
